#include <stdio.h>
void ReverseArray(int*Arr,int size);

int main(){
int n ;
printf("please,enter number of elements");
scanf("%d",&n);
int Arr[n];
for(int i=0;i<n;i++){
    printf("enter the element\n");
    scanf("%d",&Arr[i]);
}
 ReverseArray(Arr,n);
}
void ReverseArray(int*Arr,int size){
   for(int i=size;i>=0;i--) {
     printf("The reversed Array\n");
       printf("%d\n",Arr[i]);
   }
}
